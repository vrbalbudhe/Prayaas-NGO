  <!-- Main-Window -->

  <!-- Donation Details Modal -->
  <div id="donationModal" class="hidden fixed inset-0 z-10 overflow-y-auto">
    <div class="w-full flex items-center justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
      <!-- Background overlay -->
      <div class="fixed inset-0 transition-opacity" aria-hidden="true">
        <div class="absolute inset-0 bg-zinc-800 opacity-75"></div>
      </div>

      <!-- Modal content -->
      <div
        class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full">
        <div class="p-6">
          <div class="flex justify-between items-center">
            <h3 class="text-lg font-bold text-gray-900 mb-1">Donation Descriptions</h3>
            <!-- Close button -->
            <button class="text-white bg-blue-500 px-2 py-1 hover:text-slate-100 rounded-md focus:outline-none" onclick="closeModal()">Close</button>
          </div>
          <div class="text-xs text-gray-500 font-semibold mb-4"># prayaasngo@gmail.com
          </div>
          <div class="bg-gray-100 border border-gray-400 p-4 rounded-md">
            <div class="donation-details-content text-xs"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Donation Details Modal -->

  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const donationEntries = document.querySelectorAll('.donation-entry');

      donationEntries.forEach(function (entry) {
        entry.addEventListener('click', function () {
          const modal = document.getElementById('donationModal');
          const modalContent = modal.querySelector('.donation-details-content');
          // Clear existing content
          modalContent.innerHTML = '';
          // Get the donation details
          const donationDetails = this.innerHTML;
          // Display the donation details in the modal
          modalContent.innerHTML = donationDetails;
          // Show the modal
          modal.classList.remove('hidden');
        });
      });

      // Close modal when clicking outside of it
      const modal = document.getElementById('donationModal');
      modal.addEventListener('click', function (event) {
        if (event.target === modal) {
          modal.classList.add('hidden');
        }
      });
    });

    function closeModal() {
      const modal = document.getElementById('donationModal');
      modal.classList.add('hidden');
    }

    document.addEventListener("DOMContentLoaded", function () {
      const donationEntries = document.querySelectorAll('.donation-entry');
      const modal = document.getElementById('donationModal');

      donationEntries.forEach(function (entry) {
        entry.addEventListener('click', function () {
          const modalContent = modal.querySelector('.donation-details-content');
          // Clear existing content
          modalContent.innerHTML = '';
          // Get the donation details
          const donationDetails = this.innerHTML;
          // Display the donation details in the modal
          modalContent.innerHTML = donationDetails;
          // Show the modal
          modal.classList.remove('hidden');
        });
      });

      // Close modal when clicking outside of it
      window.addEventListener('click', function (event) {
        if (event.target === modal) {
          closeModal();
        }
      });
    });
  </script>
