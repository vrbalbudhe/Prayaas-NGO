  <style>
    .slider-container {
      width: 50%;
      overflow: hidden;
    }

    /* Center the modal vertically */
    #donationModal .align-bottom {
      top: 50%;
      transform: translateY(50%);
    }


    .slider {
      display: flex;
      transition: transform 0.5s ease;
    }

    .slide {
      flex: 0 0 100%;
      /* Adjust width as needed */
    }

    .slide img {
      width: 100%;
      height: auto;
    }

    body {
      font-family: "Poppins", sans-serif;
    }

    .divback {
      background-image: url("https://i.pinimg.com/564x/33/3e/a3/333ea30148468007a59f02b224f7fb1b.jpg");
      background-size: cover;
      backdrop-filter: blur(8px);
      font-family: "Poppins", sans-serif;
    }

    /* Additional CSS for form */
    .hidden {
      display: none;
    }

    .generate-request {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }

    .generate-request form {
      width: 300px;
      margin: auto;
    }

    .generate-request form input[type="text"],
    .generate-request form input[type="datetime-local"],
    .generate-request form textarea {
      width: 100%;
      margin-bottom: 10px;
      padding: 5px;
      border: 1px solid #ccc;
      border-radius: 5px;
    }

    .generate-request form button {
      width: 100%;
      padding: 8px;
      background-color: #007bff;
      color: #fff;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }
    .description-container {
      width: 100%; /* Adjust as needed */
      max-height: 300px; /* Adjust to set maximum height */
      overflow-y: auto; /* Enable vertical scrolling if needed */
      padding: 10px; /* Add padding for better readability */
      border: 1px solid #ccc; /* Optional: Add border for visual separation */
    }
    
    #submittedDescription {
      white-space: pre-wrap; /* Preserve line breaks and spacing */
      margin: 0; /* Remove default margin for <pre> element */
    }
      </style>
</head>

